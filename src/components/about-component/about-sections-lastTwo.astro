---
interface Props {
  title: string;
  subtitle?: string;
  tag?: string;
  style?: string;
}
const {title, subtitle, tag, style} = Astro.props
---

<section class="mt-48">
  <h3 class="text-center text-3xl font-semibold tracking-tight text-white">{title}</h3>
  {tag ? <p class="text-2xl text-center text-warning-400 py-2">{subtitle}</p> : ""}
  <div class:list={['mt-20', style]}>
    <slot/>
  </div>
  <slot name="button" />
</section>