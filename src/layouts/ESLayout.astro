---
import { ViewTransitions } from 'astro:transitions';
import Sidebar from "../components/sidebar/es-sidebar.astro";
interface Props {

  page: string;
}

const { page } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Shaggy.dev | {page}</title>
    <ViewTransitions/>
  </head>
  <body>
    <div class="app__container min-w-screen min-h-screen">
      <Sidebar />
      <div class="ml-60 p-4">
        <slot />
      </div>
    </div>
  </body>
</html>
